{
  "compilerOptions": {
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "moduleResolution":"node",
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "es2017",
    "module": "es2022",
    "lib": ["esnext", "dom"]
  },
  "include": ["./src/test/*spec.ts"],
  "exclude": [
      "node_modules"
  ],
}
